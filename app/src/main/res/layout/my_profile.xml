<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_img_not_found"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="3dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="105dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:theme="@style/textInput2">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="First"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textColor="@color/lightText" />

                <EditText
                    android:id="@+id/profile_first"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-"
                    android:hint="ex. John"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textColor="@color/lightText" />
            </LinearLayout>
            <LinearLayout
                app:theme="@style/textInput2"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/lightText"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Last"
                    android:textSize="24dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/profile_last"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-"
                    android:hint="ex. Smith"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textColor="@color/lightText" />
            </LinearLayout>

            <LinearLayout
                app:theme="@style/textInput2"
                android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/lightText"

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Phone"
                android:textSize="24dp"
                android:gravity="center"/>

                <EditText
                    android:id="@+id/profile_phone"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="ex. 1237891234"
                    android:inputType="date"
                    android:maxLength="12"
                    android:textColor="@color/lightText" />
        </LinearLayout>

            <LinearLayout
                app:theme="@style/textInput2"

                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/lightText"

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="DOB"
                    android:textSize="24dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/profile_dob"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ex. 1990"
                    android:inputType="date"
                    android:maxLength="4"
                    android:textColor="@color/lightText" />
            </LinearLayout>

            <Button
                android:textColor="@color/lightText"
                android:background="@drawable/button_background"
                android:id="@+id/update_profile"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Update"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>