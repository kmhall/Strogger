<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyProfileActivity"
    android:gravity="center_horizontal"
     >


    <Button
        android:id="@+id/new_run_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textSize="22dp"
        android:text="New Run"
        android:background="@drawable/button_background"
         android:textColor="@color/lightText"/>

    <TextView
        android:textAlignment="center"
        android:background="@drawable/button_background_grey"
        android:id="@+id/BLE_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_run_button"
        android:layout_marginTop="40dp"
        android:text="default"
        android:textColor="@color/lightText"
        android:textSize="24sp" />

    <ListView
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/BLE_Message"
        android:id="@+id/ListView"
        android:orientation="vertical"
        android:divider="@color/lightText"
        android:dividerHeight="1dip">
    </ListView>

</RelativeLayout>