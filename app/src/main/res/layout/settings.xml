<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <Switch
        android:id="@+id/bluetoothPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Enable Bluetooth requests on home screen"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/audioPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetoothPopup"
        android:text="Enable audio feedback"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioPopup"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Height"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/heightVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="true"
            android:hint="Height (inches)"
            android:inputType="number"
            android:maxLines="1"
            android:text="Error pulling data"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/weightVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="true"
            android:hint="Weight (pounds)"
            android:inputType="number"
            android:maxLines="1"
            android:text="Error pulling data"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>