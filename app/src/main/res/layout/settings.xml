<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@color/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Switch
                android:id="@+id/bluetoothPopup"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:text="Enable Bluetooth requests on home screen"
                android:textColor="@color/lightText"
                android:textSize="18sp"
                android:theme="@style/toggleButtonStyle" />

            <Switch
                android:id="@+id/audioPopup"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Enable vibration feedback"
                android:textColor="@color/lightText"
                android:textSize="18sp"
                android:theme="@style/toggleButtonStyle" />

            <Switch
                android:id="@+id/runningPopup"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Enable form tips while running"
                android:textColor="@color/lightText"
                android:textSize="18sp"
                android:theme="@style/toggleButtonStyle" />

            <LinearLayout
                android:id="@+id/height"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:theme="@style/textInput2">

                <TextView
                    android:id="@+id/heightText"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textColor="@color/lightText"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/heightVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="true"
                    android:hint="Height (inches)"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:textColor="@color/lightText"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weight"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:theme="@style/textInput2">

                <TextView
                    android:id="@+id/weightText"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textColor="@color/lightText"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/weightVal"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="true"
                    android:hint="Weight (pounds)"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColor="@color/lightText"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="Save Settings"
                android:textColor="@color/lightText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All settings are saved locally. Your information is private."
                    android:textColor="@color/darkText" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>