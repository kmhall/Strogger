<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="30px"
    android:paddingRight="30px"
android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp">

    <Switch
        android:textColor="@color/lightText"

        android:id="@+id/bluetoothPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Enable Bluetooth requests on home screen"
        android:textSize="18sp" />

    <Switch
        android:textColor="@color/lightText"

        android:id="@+id/audioPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetoothPopup"
        android:text="Enable audio feedback"
        android:textSize="18sp" />

    <LinearLayout
        app:theme="@style/textInput2"

        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioPopup"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/lightText"

            android:id="@+id/heightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Height"
             android:textSize="18sp" />

        <EditText
            android:id="@+id/heightVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="true"
            android:hint="Height (inches)"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/lightText"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        app:theme="@style/textInput2"

        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/height"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/lightText"

            android:id="@+id/weightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight"
             android:textSize="18sp" />

        <EditText
            android:id="@+id/weightVal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="true"
            android:hint="Weight (pounds)"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/lightText"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weight"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonSave"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All settings are saved locally. Your information is private."
            android:textColor="@color/darkText" />
    </LinearLayout>

</RelativeLayout>