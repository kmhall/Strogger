<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/darkText</item>
    </style>


    <style name="textInput">
        <item name="colorControlNormal">@color/darkText</item>
        <item name="colorAccent">@color/green</item>
    </style>


    <style name="textInput2">
        <item name="colorControlNormal">@color/lightText</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="toggleButtonStyle" parent="">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:colorControlActivated">@color/green</item>

        <!-- inactive thumb color. Unable to use since one of the libraries steals this resource
        and sets it to private-->
        <!--item name="android:colorSwitchThumbNormal">#f1f1f1
        </item> -->

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/button_back_red</item>
    </style>

</resources>
